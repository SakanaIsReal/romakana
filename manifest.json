{
    "manifest_version": 3,
    "name": "RomaKana",
    "version": "1.0",
    "description": "Convert selected text Romaji text to Japanese",
    "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}